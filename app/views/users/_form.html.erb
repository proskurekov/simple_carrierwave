<div class="column">
  <%= simple_form_for(@user) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <div class="field">
        <div class="control">
          <%= f.input :name, required: true, input_html: { class: "input" }, label_html: { class: "label" }, wrapper: false %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.input :age, required: true, input_html: { class: "input" }, label_html: { class: "label" }, wrapper: false %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.input :email, required: true, input_html: { class: "input" }, label_html: { class: "label" }, wrapper: false %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <label class="label">Добавить фото</label>
          <div class="file">
            <label class="file-label">
              <%= f.input :image, as: :file, input_html: { class:"file-input" }, label: false, wrapper: false %>
              <span class="file-cta">
                <span class="file-icon"><i class="fa fa-upload"></i></span>
                <span class="file-label">Выбрать файл</span>
              </span>
            </label>
          </div>   
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.submit 'Создать', class: 'button is-primary' %>
        </div>
      </div>
    </div>
  <% end %>   
</div>
